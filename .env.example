# ==============================================================================
# Environment Variables for NIDS-DL Project
# ==============================================================================
# Copy this file to .env and fill in your values
# ==============================================================================

# ------------------------------------------------------------------------------
# Paths
# ------------------------------------------------------------------------------
DATA_DIR=./data
RESULTS_DIR=./results
MODELS_DIR=./results/models
LOGS_DIR=./results/logs

# ------------------------------------------------------------------------------
# GPU Configuration
# ------------------------------------------------------------------------------
# Limit GPU memory growth (prevents TensorFlow from allocating all GPU memory)
TF_FORCE_GPU_ALLOW_GROWTH=true

# Specify visible GPUs (comma-separated indices, e.g., "0,1")
CUDA_VISIBLE_DEVICES=0

# ------------------------------------------------------------------------------
# Experiment Tracking (Optional)
# ------------------------------------------------------------------------------
# MLflow
MLFLOW_TRACKING_URI=./results/mlruns

# Weights & Biases (Optional)
# WANDB_API_KEY=your_api_key_here
# WANDB_PROJECT=nids-dl
# WANDB_ENTITY=your_username

# ------------------------------------------------------------------------------
# Random Seeds (for reproducibility)
# ------------------------------------------------------------------------------
RANDOM_SEED=42
